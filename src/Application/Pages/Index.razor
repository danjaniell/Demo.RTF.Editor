@page "/"
@using Application.Pages

<PageTitle>Home</PageTitle>

<RadzenSplitButton Click=@OnClick Text="Select Text Editor" Icon="account_circle">
    <ChildContent>
        <RadzenSplitButtonItem Text="Radzen" Value="1" />
        <RadzenSplitButtonItem Text="BlazoriseQuill" Value="2" />
        <RadzenSplitButtonItem Text="Quill" Value="3" />
        <RadzenSplitButtonItem Text="CKEditor" Value="4" />
    </ChildContent>
</RadzenSplitButton>
@if (componentToShow == "1")
{
    <RadzenEditor />
}
@if (componentToShow == "2")
{
    <BlazoriseEditor />
}
@if (componentToShow == "3")
{
    <QuillEditor />
}
@if (componentToShow == "4")
{
    <CKEditEditor />
}

@code {
    string componentToShow = "0";

    void OnClick(RadzenSplitButtonItem item)
    {
        componentToShow = item.Value;
    }
}